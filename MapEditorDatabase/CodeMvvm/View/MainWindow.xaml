        xmlns:local="clr-namespace:WPF_Explorer_Tree"
        mc:Ignorable="d ignore"
        Height="768"
        Width="1024"
        Title="Pathfinder Character Creator"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        xmlns:b="using:Win8Utils.Behaviors"
       >
